<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@mipmap/home_backgroung">

    <Button
        android:id="@+id/button_phone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/button_server"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="80dp"
        android:background="@drawable/ll_background_bottom"
        android:text="客户端"
        android:textColor="@color/white"
        android:visibility="gone" />

    <Button
        android:id="@+id/button_server"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/button_phone"
        android:layout_alignStart="@+id/button_phone"
        android:layout_centerVertical="true"
        android:background="@drawable/ll_background_top"
        android:text="服务器端"
        android:textColor="@color/white"
        android:visibility="gone" />
</RelativeLayout>
