<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="@dimen/size_10_dp">

    <ImageButton
        android:id="@+id/imageView_activity_reply"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_centerVertical="true"
        android:background="@drawable/fragment_reply"
        android:padding="@dimen/size_5_dp" />

    <TextView
        android:id="@+id/textView_activity_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:gravity="center_vertical"
        android:textColor="@color/title_color"
        android:text="@string/title_fragment_name"
        android:textSize="@dimen/size_25_sp" />


</RelativeLayout>
